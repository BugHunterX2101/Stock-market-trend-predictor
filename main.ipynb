
import numpy as np
import pandas as pd
import yfinance as yf
from sklearn.preprocessing import MinMaxScaler
import os
import sys
import warnings
warnings.filterwarnings('ignore')

# Check TensorFlow
try:
    import tensorflow as tf
    from tensorflow.keras.models import Sequential
    from tensorflow.keras.layers import LSTM, Dense, Dropout
    from tensorflow.keras.callbacks import EarlyStopping
    print(f"TensorFlow version: {tf.__version__}")
    TF_AVAILABLE = True
except ImportError as e:
    print(f"TensorFlow not available: {e}")
    TF_AVAILABLE = False

def download_stock_data(ticker="AAPL", period="5y"):
    try:
        print(f"\nüì¶ Downloading data for {ticker} ({period})...")
        stock = yf.Ticker(ticker)
        data = stock.history(period=period)
        if data.empty:
            print("‚ùå No data returned.")
            return None
        print(f"‚úÖ Data downloaded: {len(data)} rows")
        return data
    except Exception as e:
        print(f"‚ùå Error downloading data: {e}")
        return None

def prepare_data_for_lstm(data, lookback=100):
    if data is None or data.empty:
        print("‚ùå No data to prepare")
        return None, None, None, None
    if len(data) < lookback + 50:
        print(f"‚ùå Not enough data: {len(data)} rows (min {lookback+50})")
        return None, None, None, None

    close_prices = data['Close'].fillna(method='ffill').fillna(method='bfill').values
    scaler = MinMaxScaler(feature_range=(0, 1))
    scaled_data = scaler.fit_transform(close_prices.reshape(-1, 1))

    x_data, y_data = [], []
    for i in range(lookback, len(scaled_data)):
        x_data.append(scaled_data[i-lookback:i, 0])
        y_data.append(scaled_data[i, 0])

    x_data = np.array(x_data).reshape(-1, lookback, 1)
    y_data = np.array(y_data)

    print(f"‚úÖ Prepared sequences: X={x_data.shape}, Y={y_data.shape}")
    return x_data, y_data, scaler, close_prices

def create_lstm_model(lookback=100):
    if not TF_AVAILABLE:
        print("‚ùå TensorFlow is not available.")
        return None
    try:
        model = Sequential([
            LSTM(50, return_sequences=True, input_shape=(lookback, 1)),
            Dropout(0.2),
            LSTM(50, return_sequences=True),
            Dropout(0.2),
            LSTM(50, return_sequences=True),
            Dropout(0.2),
            LSTM(50),
            Dropout(0.2),
            Dense(1)
        ])
        model.compile(optimizer='adam', loss='mean_squared_error', metrics=['mae'])
        print("‚úÖ Model built successfully.")
        return model
    except Exception as e:
        print(f"‚ùå Error creating model: {e}")
        return None

def train_model(model, x_data, y_data):
    try:
        early_stop = EarlyStopping(monitor='val_loss', patience=10, restore_best_weights=True)
        history = model.fit(x_data, y_data, epochs=50, batch_size=32, validation_split=0.2,
                            callbacks=[early_stop], verbose=1)
        print("‚úÖ Training completed.")
        return history
    except Exception as e:
        print(f"‚ùå Error during training: {e}")
        return None

def evaluate_model(model, x_data, y_data, scaler):
    try:
        predictions = model.predict(x_data)
        loss = model.evaluate(x_data, y_data, verbose=0)
        y_actual = scaler.inverse_transform(y_data.reshape(-1, 1))
        y_pred = scaler.inverse_transform(predictions)

        mse = np.mean((y_actual - y_pred) ** 2)
        mae = np.mean(np.abs(y_actual - y_pred))
        rmse = np.sqrt(mse)

        print(f"üìä Evaluation ‚Äî Loss: {loss[0]:.6f}, MAE: {loss[1]:.6f}")
        print(f"üîç Metrics ‚Äî RMSE: ${rmse:.2f}, MAE: ${mae:.2f}, MSE: ${mse:.2f}")
        return {'rmse': rmse, 'mae': mae, 'mse': mse, 'predictions': y_pred, 'actual': y_actual}
    except Exception as e:
        print(f"‚ùå Evaluation failed: {e}")
        return None

def save_model(model, filename="keras_model.h5"):
    try:
        model.save(filename)
        size = os.path.getsize(filename) / (1024 * 1024)
        print(f"‚úÖ Model saved as '{filename}' ({size:.2f} MB)")
        return True
    except Exception as e:
        print(f"‚ùå Model save failed: {e}")
        return False

def create_and_train_model(ticker="AAPL", period="5y", lookback=100):
    print("=" * 60)
    print("üìà LSTM Stock Price Prediction Trainer")
    print("=" * 60)

    if not TF_AVAILABLE:
        print("‚ùå TensorFlow is not installed.")
        return False

    data = download_stock_data(ticker, period)
    if data is None: return False

    x_data, y_data, scaler, _ = prepare_data_for_lstm(data, lookback)
    if x_data is None: return False

    model = create_lstm_model(lookback)
    if model is None: return False

    model.summary()

    history = train_model(model, x_data, y_data)
    if history is None: return False

    _ = evaluate_model(model, x_data, y_data, scaler)

    if not save_model(model):
        return False

    print("\n‚úÖ Model pipeline completed successfully!")
    return True

if __name__ == "__main__":
    try:
        ticker = input("Enter stock ticker (default: AAPL): ").upper() or "AAPL"
    except:
        ticker = "AAPL"

    try:
        period = input("Enter period (1y, 2y, 5y, 10y, max) [default: 5y]: ") or "5y"
    except:
        period = "5y"

    if period not in ["1y", "2y", "5y", "10y", "max"]:
        print("‚ö†Ô∏è Invalid period. Using default: 5y")
        period = "5y"

    success = create_and_train_model(ticker, period)
    if not success:
        print("\n‚ùå Model creation failed.")
        sys.exit(1)
    else:
        print("\n‚úÖ You can now use this model with your Streamlit app.")
